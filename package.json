{
  "name": "wavify",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target browser --minify",
    "clean": "rm -rf dist",
    "dev": "bun --watch src/index.ts",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@types/bun": "latest",
    "@types/wav": "^1.0.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "node-web-audio-api": "^1.0.4",
    "wav": "^1.0.2"
  }
}
